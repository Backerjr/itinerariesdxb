// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * Matches your Supabase table: public."Bookings"
 * Note: Table name is capitalized, so we map it with @@map.
 * id is int8 in Postgres -> BigInt in Prisma.
 */
model Bookings {
  id     BigInt   @id @default(autoincrement())
  name   String
  email  String
  tour   String
  date   DateTime
  status String

  @@map("Bookings")
}
